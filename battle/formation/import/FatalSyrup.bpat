% Define Animations
#define .Anim:slimeStatic 00EC0200
#define .Anim:slimeIdle 00EC0201
#define .Anim:slimeWalk 00EC0202
#define .Anim:slimeRun 00EC0203
#define .Anim:slimeBite 00EC0204
#define .Anim:slimeHurt 00EC0205

% Define Parts
#define .Part:fatalSyrup 1

% Define Stats
#define .HP:fatalSyrup 2`b
#define .Damage:slimeBite 3`

