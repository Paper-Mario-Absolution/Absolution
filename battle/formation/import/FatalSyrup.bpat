#new:Script $Script_Init_Slime 
{
  Call  BindTakeTurn      ( .Actor:Self $Script_TakeTurn_Slime )
  Call  BindIdle  ( .Actor:Self $Script_Idle_Slime )
  Call  BindHandleEvent   ( .Actor:Self $Script_HandleEvent_Slime )
  %Set *Var0 1`
  Call  SetActorVar ( .Actor:Self 0` 1` )  

  Return
  End
}

#new:Script $Script_Idle_Slime 
{
  Return
  End
}

#new:Script $Script_HandleEvent_Slime 
{
  Call  UseIdleAnimation  ( .Actor:Self .False )
  Call  EnableIdleScript  ( .Actor:Self .False )
  Call  SetActorScale     ( .Actor:Self *Fixed[1.0] *Fixed[1.0] *Fixed[1.0] )
  Call  GetLastEvent      ( .Actor:Self *Var0 )
  Switch  *Var0 
    CaseOR  ==  .Event:HitCombo % 9
    CaseOR  ==  .Event:Hit % A
      SetConst  *Var0  .Part:fatalSyrup 
      SetConst  *Var1  .Anim:slimeHurt 
      ExecWait  DoNormalHit 
    EndCaseGroup
    Case  ==  .Event:BurnHit % E
      SetConst  *Var0  .Part:fatalSyrup 
      SetConst  *Var1  .Anim:slimeHurt 
      SetConst  *Var2  .Anim:slimeHurt 
      ExecWait  DoBurnHit 
    Case  ==  .Event:BurnDeath % 24
      SetConst  *Var0  .Part:fatalSyrup 
      SetConst  *Var1  .Anim:slimeHurt 
      SetConst  *Var2  .Anim:slimeHurt 
      ExecWait  DoBurnHit 
      SetConst  *Var0  .Part:fatalSyrup 
      SetConst  *Var1  .Anim:slimeHurt 
      ExecWait  DoDeath 
      Return
    Case  ==  .Event:SpinSmashHit % B
      SetConst  *Var0  .Part:fatalSyrup 
      SetConst  *Var1  .Anim:slimeHurt 
      ExecWait  DoSpinSmashHit 
    Case  ==  .Event:SpinSmashDeath % 21
      SetConst  *Var0  .Part:fatalSyrup 
      SetConst  *Var1  .Anim:slimeHurt 
      ExecWait  DoSpinSmashHit 
      SetConst  *Var0  .Part:fatalSyrup 
      SetConst  *Var1  .Anim:slimeHurt 
      ExecWait  DoDeath 
      Return
    Case  ==  .Event:ShockHit % 2F
      SetConst  *Var0  .Part:fatalSyrup 
      SetConst  *Var1  .Anim:slimeHurt 
      ExecWait  DoShockHit 
      SetConst  *Var0  .Part:fatalSyrup 
      SetConst  *Var1  .Anim:slimeHurt 
      ExecWait  DoJumpBack 
      Call  JumpToGoal    ( .Actor:Self  5` .False .True .False )
      Call  SetAnimationRate      ( .Actor:Self .Part:fatalSyrup *Fixed[2.0] )
      Call  SetAnimation  ( .Actor:Self .Part:fatalSyrup .Anim:slimeHurt )
      Call  SetGoalToHome ( .Actor:Self )
      Call  SetActorSpeed ( .Actor:Self *Fixed[8.0] )
      Call  RunToGoal     ( .Actor:Self  0` .False )
      Call  SetAnimationRate      ( .Actor:Self .Part:fatalSyrup *Fixed[1.0] )
      Wait  5`
      Call  SetAnimation  ( .Actor:Self .Part:fatalSyrup .Anim:slimeHurt )
      Call  SetActorJumpGravity   ( .Actor:Self *Fixed[1.6] )
      Call  JumpToGoal    ( .Actor:Self  5` .False .True .False )
    Case  ==  .Event:ShockDeath % 26
      SetConst  *Var0  .Part:fatalSyrup 
      SetConst  *Var1  .Anim:slimeHurt 
      ExecWait  DoShockHit 
      SetConst  *Var0  .Part:fatalSyrup 
      SetConst  *Var1  .Anim:slimeHurt 
      ExecWait  DoDeath 
      Return
    Case  ==  .Event:StarBeam % 13
    CaseOR  ==  00000017 % 17
    CaseOR  ==  .Event:Immune % 19
    CaseOR  ==  .Event:AirLiftFailed % 1F
      SetConst  *Var0  .Part:fatalSyrup 
      SetConst  *Var1  .Anim:slimeHurt 
      ExecWait  DoImmune 
    EndCaseGroup
    Case  ==  .Event:Death % 20
      SetConst  *Var0  .Part:fatalSyrup 
      SetConst  *Var1  .Anim:slimeHurt 
      ExecWait  DoNormalHit 
      Wait  10`
      SetConst  *Var0  .Part:fatalSyrup 
      SetConst  *Var1  .Anim:slimeHurt 
      ExecWait  DoDeath 
      Return
    Case  ==  .Event:EndFirstStrike % 35
      Call  SetAnimationRate  ( .Actor:Self .Part:fatalSyrup *Fixed[2.0] )
      Call  SetAnimation  ( .Actor:Self .Part:fatalSyrup .Anim:slimeHurt )
      Call  SetGoalToHome ( .Actor:Self )
      Call  SetActorSpeed ( .Actor:Self *Fixed[4.0] )
      Call  RunToGoal     ( .Actor:Self  0` .False )
      Call  SetAnimationRate  ( .Actor:Self .Part:fatalSyrup *Fixed[1.0] )
      Call  HPBarToHome   ( .Actor:Self )
    Case  ==  .Event:RecoverStatus % 31
      SetConst  *Var0  .Part:fatalSyrup 
      SetConst  *Var1  .Anim:slimeIdle 
      ExecWait  DoRecover 
    Case  ==  .Event:ScareAway % 39
      SetConst  *Var0  .Part:fatalSyrup 
      SetConst  *Var1  .Anim:slimeHurt 
      SetConst  *Var2  .Anim:slimeHurt 
      ExecWait  DoScareAway 
      Return
    Case  ==  .Event:BeginAirLift % 3A
      SetConst  *Var0  .Part:fatalSyrup 
      SetConst  *Var1  .Anim:slimeHurt 
      ExecWait  DoAirLift 
    Case  ==  .Event:BlowAway % 16
      SetConst  *Var0  .Part:fatalSyrup 
      SetConst  *Var1  .Anim:slimeHurt 
      ExecWait  DoBlowAway 
      Return
    Default
  EndSwitch
  Call  SetAnimation      ( .Actor:Self .Part:fatalSyrup .Anim:slimeIdle )
  Call  EnableIdleScript  ( .Actor:Self .True )
  Call  UseIdleAnimation  ( .Actor:Self .True )
  Return
  End
}

#new:Script $Script_TakeTurn_Slime 
{
  Call  GetActorVar ( .Actor:Self 0` *Var0 )
  If  *Var0 != 0`
    ExecWait $Script_Bite_Slime
  Else
    If *Var0 == 0`
       ExecWait $Script_Bite_Slime
    EndIf
  EndIf
  Return
  End
}

#new:Script $Script_Bite_Slime 
{
  Call  UseIdleAnimation  ( .Actor:Self .False )
  Call  EnableIdleScript ( .Actor:Self .False )
  Call  SetTargetActor ( .Actor:Self .Actor:Player )
  Call  SetAnimation ( .Actor:Self .Part:fatalSyrup .Anim:slimeRun )
  Call  SetGoalToTarget ( .Actor:Self )
  Call  AddGoalPos ( .Actor:Self 20` 0` 0` )
  Call  SetActorSpeed ( .Actor:Self *Fixed[5.0] )
  Call  RunToGoal ( .Actor:Self 0` .False )
  Call  SetAnimation ( .Actor:Self .Part:fatalSyrup .Anim:slimeIdle )
  Wait  10`
  Call  SetAnimation ( .Actor:Self .Part:fatalSyrup .Anim:slimeRun )
  Call  EnemyTestTarget   ( .Actor:Self *Var0 ~Flags:DamageType:0 00000000 00000001 00000010 )
  Switch  *Var0
    CaseOR == .HitResult:Miss % 6
    CaseOR == .HitResult:Lucky % 5
      Set    *VarA  *Var0
      Wait 5`
      If *VarA == .HitResult:Lucky % 5
        Call  SetAnimation ( .Actor:Self .Part:fatalSyrup .Anim:slimeRun )
        Wait  30`
        Call  EnemyTestTarget ( .Actor:Self *Var0 ~Flags:DamageType:TriggerLucky 00000000 00000000 00000000 )
      EndIf
      Wait 5`
      Call  YieldTurn ( )
      Call  SetActorSpeed     ( .Actor:Self *Fixed[4.0] )
      ExecWait $Script_Return_Home_Slime
      Return
    EndCaseGroup
  EndSwitch
  Call  SetAnimation ( .Actor:Self .Part:fatalSyrup .Anim:slimeRun )
  Wait  20`
  Call  SetGoalToTarget ( .Actor:Self )
  Call  EnemyDamageTarget ( .Actor:Self *Var0 ~Flags:DamageType:0 00000000 00000000 .Damage:slimeBite 00000020 )
  Wait  10`
  Switch *Var0
    CaseOR == .HitResult:Hit % 0
    CaseOR == .HitResult:QuakeImmune % 2
      Call  SetAnimation ( .Actor:Self .Part:fatalSyrup .Anim:slimeIdle )
      Wait 15`
      Call  YieldTurn ( )
      ExecWait $Script_Return_Home_Slime
    EndCaseGroup
  EndSwitch
  Call  UseIdleAnimation  ( .Actor:Self .True )
  Call  EnableIdleScript ( .Actor:Self .True )
  Return
  End
}

#new:Script $Script_Return_Home_Slime 
{
  Call  UseBattleCamPreset    ( 00000002 )
  Call  MoveBattleCamOver (  20` )
  Call  SetAnimationRate      ( .Actor:Self .Part:fatalSyrup *Fixed[2.0] )
  Call  SetAnimation      ( .Actor:Self .Part:fatalSyrup .Anim:slimeWalk )
  Call  SetGoalToHome     ( .Actor:Self )
  Call  SetActorSpeed ( .Actor:Self *Fixed[4.0] )
  Call  RunToGoal     ( .Actor:Self  0` .False )
  Call  SetAnimationRate      ( .Actor:Self .Part:fatalSyrup *Fixed[1.0] )
  Return
  End
}
