#new:IdleAnimations $IdleAnimations_Slime 
{
.Status:Normal    .Anim:slimeIdle
.Status:Stone     .Anim:slimeStatic
.Status:Sleep     .Anim:slimeIdle
.Status:Poison    .Anim:slimeIdle
.Status:Stop      .Anim:slimeStatic
.Status:Static    .Anim:slimeStatic
.Status:Paralyze  .Anim:slimeStatic
.Status:Dizzy     .Anim:slimeIdle
